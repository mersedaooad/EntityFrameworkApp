@model IEnumerable<KucniBudzetEntity.Models.BudzetTabela>

@{
    ViewBag.Title = "Index";
}

<h2>Pregled budzet</h2>

<p>
    <a href="/Budzet/Create" class="btn btn-default btn-info")>Dodavanje</a>
</p>
<table class="table table-striped">
    <tr>
        <th>
           Opis
        </th>
        <th>
            Iznos
        </th>
        <th>
            Primanja
        </th>
        <th>
            Datum
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Iznos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UlazIzlaz)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Datum)
        </td>
        <td>
            @Html.ActionLink("Promijeni", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
            @Html.ActionLink("Obrisi", "Delete", new { id = item.Id })
        </td>
    </tr>

    }
</table>
 <p> U budzetu imate : @KucniBudzetEntity.Models.BudzetSuma.suma </p>